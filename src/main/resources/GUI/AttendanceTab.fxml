<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.AttendanceTabController">
    <padding><Insets bottom="15.0" left="20.0" right="20.0" top="10.0" /></padding>
    <children>
        <VBox spacing="12.0" styleClass="white-bg, shadow" VBox.vgrow="ALWAYS">
            <padding><Insets bottom="15.0" left="15.0" right="30.0" top="15.0" /></padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <FontAwesomeIcon fill="#1f7d84" glyphName="CLOCK_ALT" size="1.8em" />
                        <Label styleClass="label-header" text="CHẤM CÔNG &amp; CÔNG TÍNH" textFill="#1f7d84">
                            <font><Font name="System Bold" size="20.0" /></font>
                        </Label>
                    </children>
                </HBox>
                <Line endX="980.0" stroke="#eee" strokeWidth="2.0" />

                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <padding><Insets bottom="10.0" top="10.0" /></padding>
                    <children>
                        <Label fx:id="lblEmployeeName" styleClass="label-a" text="Nhân viên:" />
                        <Separator orientation="VERTICAL" />
                        <Label styleClass="label-a" text="Chọn tháng:" />
                        <ComboBox fx:id="cbMonth" prefHeight="32.0" prefWidth="150.0" />
                        <Button fx:id="btnRefresh" mnemonicParsing="false" prefHeight="34.0" styleClass="action-btn" text="F5">
                            <graphic><FontAwesomeIcon glyphName="REFRESH" /></graphic>
                        </Button>
                        <Region HBox.hgrow="ALWAYS" />
                        <VBox spacing="5.0">
                            <children>
                                <HBox spacing="10.0">
                                    <children>
                                        <Label styleClass="label-a" text="Tổng giờ:" />
                                        <Label fx:id="lblTotalHours" styleClass="label-metadata-date" text="0.0 giờ" />
                                    </children>
                                </HBox>
                                <HBox spacing="10.0">
                                    <children>
                                        <Label styleClass="label-a" text="Giờ OT:" />
                                        <Label fx:id="lblOTHours" styleClass="label-metadata-date" text="0.0 giờ OT" />
                                    </children>
                                </HBox>
                                <HBox spacing="10.0">
                                    <children>
                                        <Label styleClass="label-a" text="Số ngày công:" />
                                        <Label fx:id="lblWorkDays" styleClass="label-metadata-date" text="0 ngày" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <TableView fx:id="tblAttendance" prefHeight="400.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="colCheckIn" prefWidth="150.0" text="Thời gian vào" />
                        <TableColumn fx:id="colCheckOut" prefWidth="150.0" text="Thời gian ra" />
                        <TableColumn fx:id="colWorkHours" prefWidth="100.0" text="Số giờ công" />
                        <TableColumn fx:id="colOTHours" prefWidth="100.0" text="Giờ OT" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</VBox>
