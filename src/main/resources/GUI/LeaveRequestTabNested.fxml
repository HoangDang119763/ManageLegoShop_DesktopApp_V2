<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="GUI.LeaveRequestTabNestedController"
      prefHeight="400.0" prefWidth="900.0" spacing="10.0">
    <padding><Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/></padding>

    <children>
        <!-- Header -->
        <Label text="ĐƠN NGHỈ PHÉP" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #1f7d84;"/>


        <Separator/>

        <!-- Action Buttons -->
        <HBox spacing="8.0">
            <children>
                <Button fx:id="btnAdd" styleClass="btn-primary" text="Thêm Mới"/>
                <Button fx:id="btnEdit" styleClass="btn-primary" text="Chỉnh Sửa"/>
                <Button fx:id="btnDelete" styleClass="btn-danger" text="Xóa"/>
            </children>
        </HBox>

        <!-- Leave Request Table -->
        <TableView fx:id="tblLeaveRequest" prefHeight="300.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" sortable="false"/>
                <TableColumn fx:id="colLeaveType" prefWidth="120.0" text="Loại Nghỉ" sortable="false"/>
                <TableColumn fx:id="colFromDate" prefWidth="110.0" text="Từ Ngày" sortable="false"/>
                <TableColumn fx:id="colToDate" prefWidth="110.0" text="Đến Ngày" sortable="false"/>
                <TableColumn fx:id="colReason" prefWidth="200.0" text="Lý Do" sortable="false"/>
                <TableColumn fx:id="colStatus" prefWidth="100.0" text="Trạng Thái" sortable="false"/>
                <TableColumn fx:id="colAction" prefWidth="100.0" text="Hành Động" sortable="false"/>
            </columns>
        </TableView>
    </children>
</VBox>
