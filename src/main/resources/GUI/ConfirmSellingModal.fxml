<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="850.0" style="-fx-border-color: #1f7d84; -fx-border-width: 2px;" styleClass="white-bg" stylesheets="@../css/base.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.ConfirmSellingModalController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="20.0" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <FontAwesomeIcon fill="#1f7d84" glyphName="CREDIT_CARD" size="2.5em" />
                        <VBox>
                            <children>
                                <Label text="XÁC NHẬN THANH TOÁN" textFill="#1f7d84">
                                    <font>
                                        <Font name="System Bold" size="22.0" />
                                    </font>
                                </Label>
                                <Label text="Vui lòng kiểm tra thông tin khách hàng và tiền thừa trước khi in hóa đơn" textFill="#7f8c8d" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <Line endX="800.0" stroke="#eee" strokeWidth="2.0" />

                <HBox spacing="20.0" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox maxWidth="300.0" minWidth="300.0" prefWidth="300.0" spacing="15.0" style="-fx-background-color: #f9fbfb; -fx-padding: 20; -fx-background-radius: 10; -fx-border-color: #e0e6e6; -fx-border-radius: 10;">
                            <children>
                                <Label text="THÔNG TIN HÓA ĐƠN" textFill="#1f7d84">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <VBox spacing="10.0">
                                    <children>
                                        <VBox spacing="3.0">
                                            <children>
                                                <Label text="Khách hàng:" textFill="#7f8c8d" />
                                                <Label fx:id="lblCustomerName" text="Nguyễn Văn A" wrapText="true">
                                                    <font><Font name="System Bold" size="13.0" /></font>
                                                </Label>
                                            </children>
                                        </VBox>
                                        <VBox spacing="3.0">
                                            <children>
                                                <Label text="Nhân viên bán:" textFill="#7f8c8d" />
                                                <Label fx:id="lblEmployeeName" text="Nguyễn Hoàng">
                                                    <font><Font name="System Bold" size="13.0" /></font>
                                                </Label>
                                            </children>
                                        </VBox>
                                        <VBox spacing="3.0">
                                            <children>
                                                <Label text="Khuyến mãi áp dụng:" textFill="#7f8c8d" />
                                                <Label fx:id="lblDiscountCode" text="KHÔNG CÓ" textFill="#e67e22">
                                                    <font><Font name="System Bold" size="13.0" /></font>
                                                </Label>
                                            </children>
                                        </VBox>
                              <VBox spacing="3.0">
                                 <children>
                                    <Label text="Ngày lập phiếu:" textFill="#7f8c8d" />
                                    <Label fx:id="lblCreateDate" text="22/02/2026 18:45">
                                       <font>
                                          <Font name="System Bold" size="13.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </VBox>
                                    </children>
                                </VBox>
                                <AnchorPane VBox.vgrow="ALWAYS" />

                                <VBox spacing="8.0" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8; -fx-border-color: #eee;">
                                    <children>
                                        <HBox alignment="CENTER_LEFT">
                                            <children>
                                                <Label text="Thành tiền:" textFill="#7f8c8d" HBox.hgrow="ALWAYS" />
                                                <AnchorPane HBox.hgrow="ALWAYS" />
                                                <Label fx:id="lblSubtotal" text="0 Đ" />
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER_LEFT">
                                            <children>
                                                <Label text="Giảm giá:" textFill="#7f8c8d" />
                                                <AnchorPane HBox.hgrow="ALWAYS" />
                                                <Label fx:id="lblDiscountAmount" text="- 0 Đ" textFill="#e67e22" />
                                            </children>
                                        </HBox>
                                        <Line endX="240.0" stroke="#eee" />
                                        <Label text="TỔNG THANH TOÁN" textFill="#7f8c8d">
                                            <font><Font size="11.0" /></font>
                                        </Label>
                                        <Label fx:id="lblFinalTotal" text="0 Đ" textFill="#e74c3c">
                                            <font>
                                                <Font name="System Bold" size="22.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>

                        <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="DANH SÁCH MUA HÀNG" textFill="#2c3e50">
                                    <font><Font name="System Bold" size="14.0" /></font>
                                </Label>
                                <TableView fx:id="tvConfirmDetail" prefHeight="300.0" VBox.vgrow="ALWAYS">
                                    <columns>
                              <TableColumn fx:id="tbl_col_productId" minWidth="100.0" prefWidth="100.0" text="ID" />
                                        <TableColumn fx:id="tbl_col_productName" minWidth="200.0" prefWidth="250.0" text="Tên sản phẩm" />
                                        <TableColumn fx:id="tbl_col_quantity" maxWidth="80.0" minWidth="60.0" prefWidth="70.0" text="SL" />
                                        <TableColumn fx:id="tbl_col_sellingPrice" minWidth="120.0" prefWidth="140.0" text="Đơn giá" />
                                        <TableColumn fx:id="tbl_col_totalPrice" minWidth="130.0" prefWidth="150.0" text="Thành tiền" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                    <children>
                        <Button fx:id="btnBack" mnemonicParsing="false" prefHeight="45.0" prefWidth="160.0" style="-fx-background-color: #f1f2f6; -fx-text-fill: #2c3e50;" styleClass="action-btn" text="QUAY LẠI">
                            <graphic><FontAwesomeIcon glyphName="ARROW_LEFT" /></graphic>
                            <font><Font name="System Bold" size="13.0" /></font>
                        </Button>
                        <Button fx:id="btnFinalSubmit" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0" styleClass="action-btn" text="HOÀN TẤT">
                            <graphic><FontAwesomeIcon fill="WHITE" glyphName="CHECK_CIRCLE" size="1.4em" /></graphic>
                            <font><Font name="System Bold" size="15.0" /></font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
        <StackPane fx:id="loadingOverlay" prefHeight="550.0" prefWidth="850.0" style="-fx-background-color: rgba(0, 0, 0, 0.3);" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
    </children>
</AnchorPane>
