<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350.0" prefWidth="550.0" styleClass="white-bg" stylesheets="@../css/base.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.CategoryModalController">
    <children>
        <BorderPane prefHeight="480.0" prefWidth="550.0" style="-fx-border-color: #30bac4; -fx-border-width: 2px;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <AnchorPane prefHeight="60.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label fx:id="modalName" alignment="CENTER" prefHeight="40.0" textFill="#30bac4" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="15.0">
                            <font><Font name="Arial Bold" size="22.0" /></font>
                        </Label>
                    </children>
                </AnchorPane>
            </top>

            <center>
                <VBox prefWidth="510.0" spacing="15.0" BorderPane.alignment="CENTER">
                    <padding><Insets left="30.0" right="30.0" top="10.0" /></padding>
                    <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="45.0" spacing="10.0">
                            <children>
                                <Label prefWidth="120.0" styleClass="label-s" text="Mã thể loại" textFill="#30bac4"><font><Font name="Arial Bold" size="16.0" /></font></Label>
                                <Label text=":" textFill="#30bac4"><font><Font size="18.0" /></font></Label>
                                <TextField fx:id="txtCategoryId" editable="false" focusTraversable="false" mouseTransparent="true" opacity="0.75" prefHeight="31.0" prefWidth="320.0" styleClass="textfield-2" />
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" prefHeight="45.0" spacing="10.0">
                            <children>
                                <Label prefWidth="120.0" styleClass="label-s" text="Tên thể loại" textFill="#30bac4"><font><Font name="Arial Bold" size="16.0" /></font></Label>
                                <Label text=":" textFill="#30bac4"><font><Font size="18.0" /></font></Label>
                                <TextField fx:id="txtCategoryName" prefHeight="31.0" prefWidth="320.0" promptText="Nhập tên thể loại" styleClass="textfield-1" />
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" prefHeight="45.0" spacing="10.0">
                            <children>
                                <Label prefWidth="120.0" styleClass="label-s" text="Trạng thái" textFill="#30bac4"><font><Font name="Arial Bold" size="16.0" /></font></Label>
                                <Label text=":" textFill="#30bac4"><font><Font size="18.0" /></font></Label>
                                <ComboBox fx:id="cbSelectStatus" prefHeight="31.0" prefWidth="320.0" promptText="Chọn trạng thái" />
                            </children>
                        </HBox>

                        <HBox spacing="20.0">
                            <children>
                                <VBox spacing="3.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label styleClass="label-metadata" text="Ngày tạo hệ thống" textFill="#7f8c8d"><font><Font name="System Italic" size="12.0" /></font></Label>
                                        <TextField fx:id="txtCreatedAt" editable="false" prefHeight="30.0" styleClass="field-metadata" />
                                    </children>
                                </VBox>
                                <VBox spacing="3.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label styleClass="label-metadata" text="Cập nhật lần cuối" textFill="#7f8c8d"><font><Font name="System Italic" size="12.0" /></font></Label>
                                        <TextField fx:id="txtUpdatedAt" editable="false" prefHeight="30.0" styleClass="field-metadata" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </center>

            <bottom>
                <AnchorPane prefHeight="80.0" BorderPane.alignment="CENTER">
                    <children>
                        <HBox fx:id="functionBtns" alignment="CENTER" spacing="60.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                            <children>
                                <Button fx:id="saveBtn" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0" styleClass="action-btn" text="LƯU DỮ LIỆU">
                                    <graphic><FontAwesomeIcon fill="WHITE" glyphName="SAVE" size="1.3em" /></graphic>
                                </Button>
                                <Button fx:id="closeBtn" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0" styleClass="action-btn" text="THOÁT">
                                    <graphic><FontAwesomeIcon fill="WHITE" glyphName="TIMES" size="1.3em" /></graphic>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </AnchorPane>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
