<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350.0" prefWidth="500.0" styleClass="white-bg" stylesheets="@../css/base.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.CategoryModalController">
    <children>
        <BorderPane style="-fx-border-color: #30bac4; -fx-border-width: 2px;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <top>
                <VBox alignment="TOP_CENTER">
                    <children>
                        <AnchorPane prefHeight="55.0">
                            <children>
                                <Label fx:id="modalName" alignment="CENTER" prefHeight="35.0" text="THÔNG TIN THỂ LOẠI" textFill="#30bac4" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="10.0">
                                    <font><Font name="System Bold" size="20.0" /></font>
                                </Label>
                                <Button fx:id="closeBtn" minWidth="40.0" mnemonicParsing="false" prefWidth="40.0" styleClass="close" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
                                    <graphic>
                                        <FontAwesomeIcon fill="#7f8c8d" glyphName="CLOSE" size="1.4em" styleClass="close-icon" />
                                    </graphic>
                                </Button>
                            </children>
                        </AnchorPane>
                        <Line endX="440.0" stroke="#eee" strokeWidth="1.5" />
                    </children>
                </VBox>
            </top>

            <center>
                <HBox spacing="20.0" BorderPane.alignment="CENTER">
                    <padding><Insets left="20.0" right="20.0" top="15.0" /></padding>
                    <children>
                        <VBox prefWidth="260.0" spacing="10.0" HBox.hgrow="ALWAYS">
                            <children>
                                <VBox spacing="3.0">
                                    <Label styleClass="label-s" text="Mã thể loại" textFill="#30bac4"><font><Font name="System Bold" size="13.0" /></font></Label>
                                    <TextField fx:id="txtCategoryId" editable="false" prefHeight="32.0" styleClass="textfield-1, readonly" />
                                </VBox>
                                <VBox spacing="3.0">
                                    <Label styleClass="label-s" text="Tên thể loại" textFill="#30bac4"><font><Font name="System Bold" size="13.0" /></font></Label>
                                    <TextField fx:id="txtCategoryName" prefHeight="32.0" promptText="Nhập tên thể loại" styleClass="textfield-1" />
                                </VBox>
                                <VBox spacing="3.0">
                                    <Label styleClass="label-s" text="Trạng thái" textFill="#30bac4"><font><Font name="System Bold" size="13.0" /></font></Label>
                                    <ComboBox fx:id="cbSelectStatus" prefHeight="32.0" prefWidth="400.0" promptText="Chọn trạng thái" />
                                </VBox>
                            </children>
                        </VBox>

                        <VBox prefWidth="180.0" spacing="10.0">
                            <children>
                                <VBox spacing="8.0" style="-fx-background-color: #f9f9f9; -fx-background-radius: 5; -fx-padding: 10;">
                                    <children>
                                        <VBox spacing="2.0">
                                            <Label styleClass="label-metadata" text="Ngày tạo:"><font><Font size="11.0" /></font></Label>
                                            <TextField fx:id="txtCreatedAt" editable="false" prefHeight="25.0" style="-fx-font-size: 11px;" styleClass="field-metadata" />
                                        </VBox>
                                        <VBox spacing="2.0">
                                            <Label styleClass="label-metadata" text="Cập nhật cuối:"><font><Font size="11.0" /></font></Label>
                                            <TextField fx:id="txtUpdatedAt" editable="false" prefHeight="25.0" style="-fx-font-size: 11px;" styleClass="field-metadata" />
                                        </VBox>
                                    </children>
                                </VBox>
                                <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
                                    <children>
                                        <FontAwesomeIcon fill="#30bac4" glyphName="TAGS" opacity="0.1" size="4.0em" />
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </center>

            <bottom>
                <AnchorPane prefHeight="65.0" BorderPane.alignment="CENTER">
                    <children>
                        <Line endX="440.0" layoutX="30.0" stroke="#eee" strokeWidth="1.5" AnchorPane.topAnchor="0.0" />

                        <HBox alignment="CENTER_RIGHT" prefHeight="50.0" spacing="15.0" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="20.0">
                            <children>
                                <Button fx:id="saveBtn" mnemonicParsing="false" prefHeight="38.0" prefWidth="150.0" styleClass="action-btn" text="LƯU DỮ LIỆU">
                                    <graphic><FontAwesomeIcon fill="WHITE" glyphName="SAVE" size="1.1em" /></graphic>
                                    <font><Font name="System Bold" size="12.0" /></font>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </AnchorPane>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
