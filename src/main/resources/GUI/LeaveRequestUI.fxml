<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="1074.0" styleClass="white-bg" stylesheets="@../css/base.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.LeaveRequestTabController">
    <children>
        <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <AnchorPane prefHeight="65.0" prefWidth="1074.0" BorderPane.alignment="CENTER">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="12.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
                            <children>
                                <TextField fx:id="txtSearch" prefHeight="30.0" prefWidth="200.0" promptText="Tìm nhân viên hoặc lý do..." styleClass="textfield" />
                                <ComboBox fx:id="cbStatus" prefHeight="30.0" prefWidth="150.0" promptText="Trạng thái" />
                                <Button fx:id="btnAdd" prefHeight="30.0" prefWidth="100.0" styleClass="action-btn" text="TẠO ĐƠN" />
                                <Button fx:id="btnRefresh" prefHeight="30.0" prefWidth="100.0" styleClass="action-btn" text="LÀM MỚI" />
                            </children>
                        </HBox>
                    </children>
                </AnchorPane>
            </top>

            <center>
                <VBox prefHeight="585.0" prefWidth="1074.0" spacing="10.0">
                    <padding><Insets bottom="10.0" left="10.0" right="10.0" top="0.0" /></padding>
                    <children>
                        <TableView fx:id="tblLeaveRequest" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colId" minWidth="50.0" prefWidth="50.0" text="ID" />
                                <TableColumn fx:id="colEmployeeName" minWidth="120.0" prefWidth="120.0" text="Nhân viên" />
                                <TableColumn fx:id="colLeaveType" minWidth="100.0" prefWidth="100.0" text="Loại nghỉ" />
                                <TableColumn fx:id="colStartDate" minWidth="100.0" prefWidth="100.0" text="Ngày bắt đầu" />
                                <TableColumn fx:id="colEndDate" minWidth="100.0" prefWidth="100.0" text="Ngày kết thúc" />
                                <TableColumn fx:id="colDays" minWidth="80.0" prefWidth="80.0" text="Số ngày" />
                                <TableColumn fx:id="colStatus" minWidth="100.0" prefWidth="100.0" text="Trạng thái" />
                                <TableColumn fx:id="colReason" minWidth="150.0" prefWidth="150.0" text="Lý do" />
                                <TableColumn fx:id="colAction" minWidth="150.0" prefWidth="150.0" text="Hành động" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
