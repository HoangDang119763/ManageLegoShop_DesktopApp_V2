<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.PayrollTabController">
    <padding><Insets bottom="15.0" left="20.0" right="20.0" top="10.0" /></padding>
    <children>
        <VBox spacing="12.0" styleClass="white-bg, shadow" VBox.vgrow="ALWAYS">
            <padding><Insets bottom="15.0" left="15.0" right="30.0" top="15.0" /></padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <FontAwesomeIcon fill="#1f7d84" glyphName="MONEY" size="1.8em" />
                        <Label styleClass="label-header" text="BẢNG LƯƠNG CÁ NHÂN" textFill="#1f7d84">
                            <font><Font name="System Bold" size="20.0" /></font>
                        </Label>
                    </children>
                </HBox>
                <Line endX="980.0" stroke="#eee" strokeWidth="2.0" />

                <GridPane hgap="30.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="120.0" />
                        <ColumnConstraints hgrow="ALWAYS" maxWidth="250.0" />
                        <ColumnConstraints halignment="RIGHT" minWidth="120.0" />
                        <ColumnConstraints hgrow="ALWAYS" maxWidth="250.0" />
                    </columnConstraints>
                    <children>
                        <Label styleClass="label-a" text="Nhân viên:" />
                        <Label fx:id="lblEmployeeName" styleClass="label-a" text="--" GridPane.columnIndex="1" />
                        <Label styleClass="label-a" text="Lương cơ bản:" GridPane.columnIndex="2" />
                        <Label fx:id="lblBaseSalary" styleClass="label-a" text="--" GridPane.columnIndex="3" />
                    </children>
                    <rowConstraints>
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>

                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <Label styleClass="label-a" text="Chọn kỳ tính lương:" />
                        <ComboBox fx:id="cbPeriod" prefHeight="32.0" prefWidth="200.0" />
                        <Button fx:id="btnCalculate" mnemonicParsing="false" prefHeight="34.0" styleClass="action-btn" text="Tính lương">
                            <graphic><FontAwesomeIcon glyphName="CALCULATOR" /></graphic>
                        </Button>
                        <Button fx:id="btnRefresh" mnemonicParsing="false" prefHeight="34.0" styleClass="action-btn" text="F5">
                            <graphic><FontAwesomeIcon glyphName="REFRESH" /></graphic>
                        </Button>
                    </children>
                </HBox>

                <TableView fx:id="tblPayroll" prefHeight="350.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colPeriod" prefWidth="100.0" text="Kỳ tính" />
                        <TableColumn fx:id="colTemporarySalary" prefWidth="120.0" text="Lương tạm tính" />
                        <TableColumn fx:id="colOvertime" prefWidth="100.0" text="Tăng ca" />
                        <TableColumn fx:id="colAllowance" prefWidth="100.0" text="Trợ cấp" />
                        <TableColumn fx:id="colBonus" prefWidth="100.0" text="Thưởng" />
                        <TableColumn fx:id="colDeduction" prefWidth="100.0" text="Khấu trừ" />
                        <TableColumn fx:id="colFine" prefWidth="100.0" text="Phạt" />
                        <TableColumn fx:id="colNetSalary" prefWidth="120.0" text="Lương thực nhận" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <HBox alignment="CENTER_RIGHT" spacing="20.0">
                    <padding><Insets top="10.0" /></padding>
                    <children>
                        <VBox spacing="5.0">
                            <children>
                                <Label styleClass="label-a" text="Lương cơ bản tháng:" />
                                <Label fx:id="lblTemporarySalary" styleClass="label-metadata-date" text="--" />
                            </children>
                        </VBox>
                        <Separator orientation="VERTICAL" />
                        <VBox spacing="5.0">
                            <children>
                                <Label styleClass="label-a" text="Lương thực nhận:" />
                                <Label fx:id="lblNetSalary" styleClass="label-metadata-date" text="--" textFill="#1f7d84" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</VBox>
