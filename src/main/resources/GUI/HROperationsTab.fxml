<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="GUI.HROperationsTabController"
      prefHeight="600.0" prefWidth="1000.0" spacing="10.0">
    <padding><Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/></padding>

    <!-- Employee Selection Section -->
    <VBox spacing="10.0" style="-fx-border-color: #ddd; -fx-border-radius: 5; -fx-padding: 15;">
        <children>
            <!-- Header -->
            <Label text="QUẢN LÝ NHÂN VIÊN" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #1f7d84;"/>

            <Separator/>

            <!-- Employee Selection -->
            <VBox spacing="8.0">
                <children>
                    <Label style="-fx-font-size: 12; -fx-text-fill: #333;" text="Tìm kiếm nhân viên:"/>
                    <TextField fx:id="tfEmployeeSearch" prefHeight="35.0"
                               promptText="Tìm kiếm theo tên hoặc ID..."/>
                    <Label style="-fx-font-size: 12; -fx-text-fill: #333;" text="Chọn nhân viên:"/>
                    <ComboBox fx:id="cbEmployeeSelector" prefHeight="35.0" prefWidth="400.0"
                              promptText="Chọn nhân viên từ danh sách..."/>
                </children>
            </VBox>
        </children>
    </VBox>

    <!-- HR Operations Tabs -->
    <TabPane fx:id="tabPaneHROperations" prefHeight="500.0" prefWidth="1000.0"
             tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <!-- Tabs will be loaded dynamically in Java code -->
    </TabPane>
</VBox>
